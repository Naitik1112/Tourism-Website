extends structure

mixin reviewCard(review)
  .reviews__card
    //- .reviews__avatar
    //-   img.reviews__avatar-img(src=`/img/tours/${review.tour.imageCover}`, alt=`${review.tour.name}`)
    p.reviews__text Posted At - #{new Date(review.createdAt).toLocaleDateString('en-GB')}
    h6.reviews__user= review.tour.name
    p.reviews__text= review.review
    .reviews__rating
      each star in [1, 2, 3, 4, 5]
        svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active' : 'inactive'}`)
          use(xlink:href='/img/icons.svg#icon-star')
           | 
          

block content
  .card-container
    each review in reviews
      +reviewCard(review)
